<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title_style">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <declare-styleable name="ViewPagerIndicator">
        <attr name="numbers" format="integer"/>
        <attr name="foreColor" format="color"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="gapWidth" format="float"/>
    </declare-styleable>


    <style name="Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginBottom">16dp</item>

        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">@dimen/dp_6</item>
        <item name="cardElevation">@dimen/dp_4</item>
    </style>


    <style name="CardPhoto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:tint">@color/photo_tint</item>

        <item name="android:scaleType">centerCrop</item>
        <item name="riv_corner_radius">6dp</item>
    </style>

    <color name="photo_tint">#7F101010</color>
</resources>
